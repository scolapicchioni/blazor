@inject MapJsInterop mapInterop

<h3>Map</h3>

<div id="map"></div>

<MatButton @onclick="ShowMap">Click here to show the map</MatButton>

@code {
    [Parameter]
    public Photo Photo { get; set; }

    public async Task ShowMap() {
        await mapInterop.ShowMap(Photo.Latitude, Photo.Longitude, Photo.Title);
    }
}
